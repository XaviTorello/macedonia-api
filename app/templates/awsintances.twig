{% extends "templates/base.twig" %} 

{% block body %}
{{ set_textdomain('index') }}
   <!-- page content -->
        <div class="right_col" role="main">

          <div class="row">
          	<div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>{% trans %}server{% endtrans %} AWS</h2>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="aws_datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>{% trans %}name{% endtrans %}</th>
                          <th>{% trans %}instance{% endtrans %} Id </th>
                          <th>{% trans %}status{% endtrans %} </th>
                          <th>{% trans %}actions{% endtrans %}</th>
                        </tr>
                      </thead>


                      <tbody>
                      {% if instances.response == true %}

                        {% for instance in instances.result%}
                          {% for ins in instance.Instances %}
                            <tr>
                              <td>{{ ins.KeyName}}</td>
                              <td>{{ ins.InstanceId }}</td>
                              <td>{{ ins.State.Name }}</td>
                              <td>
                                {% if ins.State.Code == 80 %}
                                  <button type="button" class="btn btn-default start_aws" data-id="{{ ins.InstanceId }}">{% trans %}start{% endtrans %}</button>
                                {% elseif ins.State.Code == 16 %}
                                  <button type="button" class="btn btn-danger stop_aws" data-id="{{ ins.InstanceId }}">{% trans %}stop{% endtrans %}</button>
                                {% endif %}
                              </td>
                
                            </tr>
                        {% endfor %}
                      {% endfor %}




                      	{% for instance in instances.result%}

                        {% endfor %}
                        {% endif %}

                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
          </div>


        </div>
        <!-- /page content -->


{% endblock %}

{% block javascript %}
  <script type="text/javascript">
 var language_site = '{{locale}}'
 </script>
{{ parent() }}
 <script src="{{ base_url() }}/js/aws.js"></script>

{% endblock %}